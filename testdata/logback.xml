<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{dd MMM yyyy HH:mm:ss.SSS} %5level [%thread] [%logger{5}] %msg%n</pattern>
    </encoder>
  </appender>
  <logger name="biz.neustar.hopper" level="INFO"/>
  <logger name="org.jboss.netty" level="DEBUG"/>
  <root level="WARN">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
